<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- 定义RabbitMQ的连接工厂 -->
	<rabbit:connection-factory id="connectionFactory"
		host="127.0.0.1" port="5672" username="sanqi" password="sanqi"
		virtual-host="/sanqi" />

	<!-- MQ的管理，包括队列、交换器等 -->
	<rabbit:admin connection-factory="connectionFactory" />

	<!-- 定义队列 -->
	<rabbit:queue name="SANQI-ITEM-QUEUE" auto-declare="true" durable="false"/>
	
	<!-- 定义消费者 -->
	<bean id="itemHandler" class="com.saniq.mq.handler.ItemHandler"/>
	
	<!-- 定义监听 -->
	<rabbit:listener-container connection-factory="connectionFactory">
		<rabbit:listener ref="itemHandler" method="execute" queue-names="SANQI-ITEM-QUEUE"/>
	</rabbit:listener-container>

</beans>